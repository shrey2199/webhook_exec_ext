{
  "manifest_version": 3,
  "name": "MacroDroid Webhook Executor",
  "version": "1.0.0",
  "description": "Execute MacroDroid webhooks with custom parameters from any webpage",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
